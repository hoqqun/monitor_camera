    <div class="container">
      <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100 h-50" src="car1.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
              <h5>IoT研究会</h5>
            </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100 h-50" src="car2.jpg" alt="Second slide">
              <div class="carousel-caption d-none d-md-block">
                <h5>これがRasberry PIです</h5>
              </div>
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="car3.jpg" alt="Third slide">
              <div class="carousel-caption d-none d-md-block">
                <h5>これはラズベリーパンケーキです</h5>
              </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      <br />
      <div class="row">
        <% @picture_path.each do |x| %>
          <div class="col">
            <div class="card border-dark mb-3" style="width: 16rem;">
              <img class="card-img-top" src="picture/<%= x[0] %>/<%= x[1][0] %>" alt="Card image cap">
              <div class="card-body">
                <h5 class="card-title">時刻：<%= x[0] %></h5>
                <a href="/show/<%= x[0] %>" class="card-link">もっと見る</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <br />
    </div>
